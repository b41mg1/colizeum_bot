import telebot
from telebot import types




bot = telebot.TeleBot(TOKEN)

@bot.message_handler(commands=['start'])
def handle_text(message):
    bot.send_message(message.chat.id,
                     '–ü—Ä–∏–≤–µ—Ç!–ß—Ç–æ–±—ã —É–∑–Ω–∞—Ç—å –≤—Å—é –Ω–µ–æ–±—Ö–æ–¥–∏–º—É—é –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—é,–∏—Å–ø–æ–ª—å–∑—É–π –¥–∞–Ω–Ω—ã–µ –∫–æ–º–∞–Ω–¥—ã: /info , /booking , /rules , /payment')

@bot.message_handler(commands=['booking'])
def handle_text(message):
    bot.send_message(message.chat.id,
                     '–ß—Ç–æ–±—ã –∑–∞–±—Ä–æ–Ω–∏—Ä–æ–≤–∞—Ç—å –º–µ—Å—Ç–æ,–ø–æ–∑–≤–æ–Ω–∏—Ç–µ –ø–æ –¥–∞–Ω–Ω–æ–º—É –Ω–æ–º–µ—Ä—É( +7 (968) 759-59-46 ) –∏–ª–∏ –Ω–∞–ø–∏—à–∏—Ç–µ –≤ –ª–∏—á–Ω—ã–µ —Å–æ–æ–±—â–µ–Ω–∏—è –≥—Ä—É–ø–ø—ã –í–∫–æ–Ω—Ç–∞–∫—Ç–µ.')


@bot.message_handler(commands=['rules'])
def handle_text(message):
    bot.send_message(message.chat.id,
                     '–í –∫–ª—É–±–µ –Ω–µ–æ–±—Ö–æ–¥–∏–º–æ –Ω–∞–ª–∏—á–∏–µ –∑–∞—â–∏—Ç–Ω–æ–π –º–∞—Å–∫–∏.–¢–∞–∫ –∂–µ,–≤—ã –º–æ–∂–µ—Ç–µ –ø–µ—Ä–µ–∫—É—Å–∏—Ç—å –∑–∞ —Å–ø–µ—Ü–∏–∞–ª—å–Ω—ã–º —Å—Ç–æ–ª–∏–∫–æ–º –¥–ª—è –µ–¥—ã,–Ω–æ –Ω–µ –∑–∞ –∏–≥—Ä–æ–≤—ã–º –º–µ—Å—Ç–æ–º.–ù–µ–ª—å–∑—è –≥—Ä–æ–º–∫–æ –∫—Ä–∏—á–∞—Ç—å,–±–∏—Ç—å –∞–ø–ø–∞—Ä–∞—Ç—É—Ä—É –∏  –≤–æ–æ–±—â–µ –Ω–∞–Ω–æ—Å–∏—Ç—å –∫–∞–∫–æ–π –ª–∏–±–æ —É—â–µ—Ä–± –∫–ª—É–±—É.')


@bot.message_handler(commands=['payment'])
def handle_text(message):
    bot.send_message(message.chat.id,
                     '–û–ø–ª–∞—Ç–∞ –Ω–∞ –∫–∞—Å—Å–µ –≤–æ–∑–º–æ–∂–Ω–∞ –∫–∞–∫ –Ω–∞–ª–∏—á–Ω—ã–º–∏,—Ç–∞–∫ –∏ –±–µ–∑–Ω–∞–ª–∏—á–Ω–æ –ø–æ —Ç–µ—Ä–º–∏–Ω–∞–ª—É(—á–∞–µ–≤—ã–µ –ø—Ä–∏–≤–µ—Ç—Å—Ç–≤—É—é—Ç—Å—è ^_^).')


@bot.message_handler(commands=['info'])
def text(message):
    markup = types.ReplyKeyboardMarkup(resize_keyboard=True)

    item1 = types.KeyboardButton('üí∞–¶–µ–Ω—ã –∏ —Ç–∞—Ä–∏—Ñ—ã')
    item2 = types.KeyboardButton('üåå–ê–¥—Ä–µ—Å –∫–ª—É–±–∞')
    item3 = types.KeyboardButton('üïí–í—Ä–µ–º—è —Ä–∞–±–æ—Ç—ã')
    item4 = types.KeyboardButton('üïπ–ò–≥—Ä—ã')
    item5 = types.KeyboardButton('üç´ü•§–ï–¥–∞ –∏ –Ω–∞–ø–∏—Ç–∫–∏')

    markup.add(item1, item2, item3, item4, item5)

    bot.send_message(message.chat.id,
                     '–ü—Ä–∏–≤–µ—Ç—Å—Ç–≤—É—é ,{0.first_name}! –î–∞–Ω–Ω—ã–π —Ç–µ–ª–µ–≥—Ä–∞–º –±–æ—Ç —ç—Ç–æ —ç–∫—Å–ø–µ—Ä–∏–º–µ–Ω—Ç–∞–ª—å–Ω–∞—è —Ä–∞–∑—Ä–∞–±–æ—Ç–∫–∞ –¥–ª—è —Ç–µ—Ö –∫—Ç–æ —Ö–æ—á–µ—Ç –ø–æ—Å–µ—Ç–∏—Ç—å –∏–≥—Ä–æ–≤–æ–π –∫–ª—É–± Colizeum –∏ —É–∑–Ω–∞—Ç—å –≤—Å—é –Ω–µ–æ–±—Ö–æ–¥–∏–º—É—é –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—é '.format(
                         message.from_user), reply_markup=markup)


@bot.message_handler(content_types=['text'])
def bot_message(message):
    if message.chat.type == 'private':
        if message.text == 'üí∞–¶–µ–Ω—ã –∏ —Ç–∞—Ä–∏—Ñ—ã':
            bot.send_photo(message.chat.id, 'https://wampi.ru/image/RU2jss4')
            bot.send_message(message.chat.id, '–¶–µ–Ω—ã –≤ –∫–ª—É–±–µ"')

        if message.text == 'üåå–ê–¥—Ä–µ—Å –∫–ª—É–±–∞':
            bot.send_message(message.chat.id,
                             ' –ì.–ú—ã—Ç–∏—â–∏,–®–∞—Ä–∞–ø–æ–≤—Å–∫–∏–π –ø—Ä–æ–µ–∑–¥  –≤–ª.2,—Å—Ç—Ä.3, –¢–¶ –ö—Ä–∞—Å–Ω—ã–π –ö–∏—Ç,3 —ç—Ç–∞–∂.')
            bot.send_photo(message.chat.id, 'https://wampi.ru/image/RU2JnZz')
            bot.send_photo(message.chat.id, 'https://wampi.ru/image/RU2JeGw')

        if message.text == 'üïí–í—Ä–µ–º—è —Ä–∞–±–æ—Ç—ã':
            bot.send_message(message.chat.id, '–ö–ª—É–± —Ä–∞–±–æ—Ç–∞–µ—Ç –∫—Ä—É–≥–ª–æ—Å—É—Ç–æ—á–Ω–æ,24/7 –∏ –≤—Å–µ–≥–¥–∞ —Ä–∞–¥ –ø—Ä–∏–Ω—è—Ç—å –∫–ª–∏–µ–Ω—Ç–æ–≤!')

        if message.text == 'üïπ–ò–≥—Ä—ã':
            bot.send_message(message.chat.id, '–ò–∑ –æ—Å–Ω–æ–≤–Ω—ã—Ö –∏–≥—Ä –Ω–∞ –ü–ö —Å—Ç–æ—è—Ç: DoTA,CS:GO,Apex Legends,Genshin Impact –∏ PUBG.–ù–æ –∫–∞–∂–¥—ã–π –∫–ª–∏–µ–Ω—Ç –ø—Ä–∏ –∂–µ–ª–∞–Ω–∏–∏ –º–æ–∂–µ—Ç –ø–æ—Å—Ç–∞–≤–∏—Ç—å —Å–≤–æ—é –∏–≥—Ä—É –∏–∑ —Å–æ–±—Å—Ç–≤–µ–Ω–Ω–æ–π –∫–æ–ª–ª–µ–∫—Ü–∏–∏.–ù–∞ PS4 –≤ –æ—Å–Ω–æ–≤–Ω–æ–º —Å—Ç–æ—è—Ç:Mortal Combat 10,UFC 3,4, FIFA, PES,–Ω–æ –ø—Ä–∏—Å—É—Ç—Å—Ç–≤—É—é—Ç –∏ –¥—Ä—É–≥–∏–µ –∏–≥—Ä—ã.')

        if message.text == 'üç´ü•§–ï–¥–∞ –∏ –Ω–∞–ø–∏—Ç–∫–∏':
            bot.send_message(message.chat.id, '–£ –Ω–∞—Å –µ—Å—Ç—å –¥–≤–∞ —Ö–æ–ª–æ–¥–∏–ª—å–Ω–∏–∫–∞ —Å —Ä–∞–∑–ª–∏—á–Ω—ã–º–∏ –Ω–∞–ø–∏—Ç–∫–∞–º–∏ –∏ –µ–¥–æ–π.–≠–Ω–µ—Ä–≥–µ—Ç–∏–∫–∏,–≥–∞–∑–∏—Ä–æ–≤–∫–∞,–æ–±—ã—á–Ω–∞—è –≤–æ–¥–∞.–®–æ–∫–æ–ª–∞–¥–∫–∏,–ø–∏—Ç–∞—Ç–µ–ª—å–Ω—ã–µ –±–∞—Ç–æ–Ω—á–∏–∫–∏ –∏ –º–Ω–æ–≥–æ –¥—Ä—É–≥–æ–≥–æ!')


bot.polling(none_stop=True)
